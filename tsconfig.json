{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "lib": ["DOM", "ES2020"],
    "types": ["@league-of-foundry-developers/foundry-vtt-types", "vite/client"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "*.d.ts"]
}
