      <label for="msbAbility">{{localize "PF1SPHERES.Settings.MSBAbility"}}</label>
      <div class="form-fields">
        <select id="msbAbility" name="flags.pf1spheres.msbAbility" data-dtype="String">
          {{#select pf1sFlags.msbAbility}}
          <option value=""></option>
          {{#each PF1CONFIG.abilities as |label value|}}
