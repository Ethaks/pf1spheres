  "bugs": {
    "url": "https://gitlab.com/ethaks-fvtt/foundryvtt-pf1-spheres/-/issues"
  },
  "contributors": [
    {
      "name": "Ethaks"
    }
  ],
  "sideEffects": [
    "src/styles/pf1spheres.scss",
    "src/pf1spheres.ts"
  ],
  "type": "module",
  "scripts": {
    "build": "npm run compilePacks && vite build",
    "build:watch": "npm run compilePacks && vite build --watch",
    "build:dev": "npm run compilePacks && vite build --mode development",
    "serve": "vite",
    "link-package": "node ./tools/link-package.js",
    "clean:link": "node ./tools/link-package.js --clean",
    "lint": "eslint --ext .ts,.js,.mjs .",
    "lint:fix": "eslint --ext .ts,.js,.mjs --fix .",
    "format": "prettier --write \"./**/*.(ts|js|mjs|json|css)\"",
    "test": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:ci": "vitest run -c vitest.ci.config.ts --coverage",
    "typecheck": "tsc",
    "release": "standard-version -a",
    "postinstall": "husky install",
    "extractPacks": "node ./tools/packs.js extract",
    "compilePacks": "node ./tools/packs.js compile"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@guanghechen/rollup-plugin-copy": "^1.9.4",
    "@league-of-foundry-developers/foundry-vtt-types": "^9.268.2",
    "@seald-io/nedb": "^3.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "@vitest/ui": "^0.12.6",
    "c8": "^7.11.3",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fp-ts": "^2.12.1",
    "fs-extra": "^10.0.1",
    "husky": "^8.0.1",
    "io-ts": "^2.2.16",
    "lint-staged": "^12.4.1",
    "merge-stream": "^2.0.0",
    "prettier": "^2.6.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "standard-version": "^9.5.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-checker": "^0.4.6",
    "vitest": "^0.12.6",
    "yargs": "^17.5.1"
  },
  "lint-staged": {
    "*.(ts|js)": "eslint --fix",
    "*.(json|css)": "prettier --write"
  }
}
